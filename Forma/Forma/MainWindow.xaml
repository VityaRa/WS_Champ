<Window x:Class="Forma.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Forma"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Grid.Row="1" Click="Button_Click"></Button>
        <DataGrid Name="DG" Grid.Row="0" ColumnWidth="*"></DataGrid>
        <ScrollViewer Grid.Row="2">
            <TextBlock Name="ANS" Grid.Row="2" FontSize="10" TextWrapping="Wrap"></TextBlock>
            </ScrollViewer>
    </Grid>
    
</Window>

<Window x:Class="Forma.DeleteRegion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Forma"
        mc:Ignorable="d"
        Title="DeleteRegion" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <ComboBox Name="DeleteCombo" Grid.Row="0" HorizontalContentAlignment="Center"></ComboBox>
        <Button Name="DeleteBtn" Grid.Row="1" FontSize="30" Click="DeleteBtn_Click">Удалить!</Button>
    </Grid>
</Window>

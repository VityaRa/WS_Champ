<Window x:Class="Forma.AddRegion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Forma"
        mc:Ignorable="d"
        Title="AddRegion" Height="600" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Height="50">Название региона</TextBlock>
            <TextBox Name ="InName" Height="100"></TextBox>
            <TextBlock Height="50">Столица</TextBlock>
            <TextBox Name ="InCapital" Height="100"></TextBox>
            <TextBlock Height="50">Округ</TextBlock>
            <TextBox Name ="InDistrict" Height="100"></TextBox>
            <Button Height="50" Name="Input" Click="Input_Click">Добавить</Button>
        </StackPanel>

    </Grid>
</Window>

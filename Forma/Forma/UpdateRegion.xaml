<Window x:Class="Forma.UpdateRegion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Forma"
        mc:Ignorable="d"
        Title="UpdateRegion" Height="450" Width="800">
    <Grid>

        <StackPanel>
            <TextBlock>Название</TextBlock>
            <TextBox Height="50" Name="NameInput"></TextBox>
            <TextBlock>Столица</TextBlock>
            <TextBox Height="50"  Name="CapitalInput"></TextBox>
            <TextBlock>Округ</TextBlock>
            <TextBox Height="50"  Name="DistrictInput"></TextBox>
            <Button Name="UpdateBtn" Height="100" Click="UpdateBtn_Click">Обновить!</Button>
        </StackPanel>
        
    </Grid>
</Window>
